{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "NodeNext",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@client/*": [
        "./client/src/*"
      ],
      "@server/*": [
        "./server/src/*"
      ]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "client/src",
    "server/src",
    "client/vite-env.d.ts"
  ],
  "exclude": [
    "src/tempobook"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}

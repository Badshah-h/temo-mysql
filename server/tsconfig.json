{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/*"]
    }
  },
  "include": [
    "server/**/*",  // Ensure that this points to your server files
    "../client/vite-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "loader": "ts-node/esm",  // This is crucial for ESM support
    "require": ["tsconfig-paths/register"]  // Enable path alias support if needed
  }
}
